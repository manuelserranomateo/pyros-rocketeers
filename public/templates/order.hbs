{{> navbar}}
{{> header}}
{{> messages}}
<main>
    <div class="container">
        <div>
            <h1>Order</h1>
            {{#if order}}
            <P><strong>Order number: </strong> {{order.number}}</p>
            <p><strong>Date: </strong> {{formatDate order.date}}</p>
            <p><strong>Address: </strong>{{order.address}}</p>
            <p><strong>Card number: </strong>{{order.card_number}}</p>
            <p><strong>Card owner: </strong>{{order.card_holder}}</p>
        </div>
        <div>
            <h1>Products</h1>
            <table class="table table-dark table-striped align-middle">
                <thead>
                    <tr>
                        <th scope="col">Qty</th>
                        <th scope="col">Product</th>
                        <th scope="col">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {{#each order.orderItems}}
                        <td>{{qty}}</td>
                        <td>{{product.title}}</td>
                        <td>{{multiply product.price qty}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>                 
            <p><strong>Subtotal: ₹</strong> {{subtotal order.orderItems}}</p>
            <p><strong>Tax: ₹</strong> {{tax order.orderItems}}</p>
            <p><strong>Total: ₹</strong> {{total order.orderItems}}</p>
        </div>
        {{else}}
        <div>No orders</div>{{/if}}
    </div>
</main>
{{> footer}}